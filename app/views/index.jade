html
  head
    - var title = title || 'Exchange Volumes'
    title= title
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/app.css')
  body
    header
        div.container
            h4 Crypto Volumes       
    div.container
        div.row
            div.col-sm-12
                div.precontent
                    div.row
                        div.col-sm-6.col-lg-3
                            div.precontent-item
                                p 24HR Volume($) 
                                p $#{volumeData.todayTotalVolume}
                        div.col-sm-6.col-lg-3
                            div.precontent-item
                                p 24HR Volume(B)
                                p #{btcVolume}
                        div.col-sm-6.col-lg-3
                            div.precontent-item
                                p Change 24HR
                                p #{volumeData.volume1day}
                        div.col-sm-6.col-lg-3
                            div.precontent-item
                                p Change 7 Days
                                p #{volumeData.volumeWeek}
        div.row
            div.col-sm-12
                div#total-volumes(style="height: 400px;")
        
        br

        div.row
            div.col-sm-12
                div#container(style="height: 600px;")
 
    
    <!-- Scripts for this page -->
    script(src='//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js')
    script(src='https://code.jquery.com/jquery-3.1.1.min.js')
    script(src='https://code.highcharts.com/stock/highstock.js')
    script(src='https://code.highcharts.com/stock/modules/exporting.js')
    script(src='https://code.highcharts.com/stock/modules/export-data.js')
    script(src='/js/highcharts.js')
        
